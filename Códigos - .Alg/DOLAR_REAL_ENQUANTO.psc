algoritmo "Real dolar Multplicaçao"
//ESTRUTURA DE REPETIÇÃO
var
   R, C :inteiro
   reais, dolares : real

inicio
C <- 0

escreva("QUANTOS RESULTADOS DESEJA")
leia (R)

enquanto (C <= R) faca
      escreval ("Quantos reais você tem? ")
            leia (reais)

            dolares <- reais / 2.2
            escreval(" Você tem $ ",dolares)
             C <- C+1
fimenquanto

fimalgoritmo
